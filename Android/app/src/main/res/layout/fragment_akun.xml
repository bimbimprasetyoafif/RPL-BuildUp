<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".AkunFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:src="@drawable/foto_profil" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefin_sans"
                    android:text="@string/nama_pengguna"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/josefin_sans"
                    android:text="Sunting Akun >"

                    android:textSize="18dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="338dp"
                android:layout_height="40dp"
                android:fontFamily="@font/josefin_sans"
                android:text="Pusat Bantuan"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text=">"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
           android:background="@android:color/darker_gray"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="338dp"
                android:layout_height="40dp"
                android:fontFamily="@font/josefin_sans"
                android:text="Ketentuan Layanan"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text=">"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="338dp"
                android:layout_height="40dp"
                android:fontFamily="@font/josefin_sans"
                android:text="Kebijakan Privasi"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text=">"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="338dp"
                android:layout_height="40dp"
                android:fontFamily="@font/josefin_sans"
                android:text="Beri Kami Nilai"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text=">"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="338dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/josefin_sans"
            android:text="Pengaturan"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <TextView

            android:layout_width="338dp"
            android:layout_height="40dp"
            android:fontFamily="@font/josefin_sans"
            android:text="Keluar"
            android:onClick="klikKeluar"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18dp" />



    </LinearLayout>

</RelativeLayout>